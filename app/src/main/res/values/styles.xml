<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GameButton" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorBackground</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:buttonBarNegativeButtonStyle">@style/GameButton</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/GameButton</item>
    </style>

</resources>